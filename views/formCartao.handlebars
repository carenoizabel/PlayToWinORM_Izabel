<h1> Cadastre seu Cartão</h1>
<form action="/usuarios/{{usuario.id}}/novoCartao" method="post">

  <div>
    <label for="numero">Número</label>
    <input
      type="text"
      maxlength="16"
      minlength="16"
      id="numero"
      name="numero"
    />
  </div>
  <div>
    <label for="nome">Nome</label>
    <input type="text" maxlength="30" id="nome" name="nome" />
  </div>
  <div>
    <label for="codSeguranca">Código de Segurança</label>
    <input type="text" maxlength="3" minlength="3"id="codSeguranca" name="codSeguranca" />
  </div>

  <input type="submit" value="Cadastrar" />

</form>
