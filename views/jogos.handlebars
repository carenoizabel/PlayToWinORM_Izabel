<h1>Jogos Cadastrados</h1>
<a class="button" href="/cadastrarJogo">Cadastrar Novo Jogo</a>
<table>
    <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Descrição</th>
        <th>Preço Base</th>
        <th>Conquistas</th>
    </tr>
    {{#each jogos}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.titulo}}</td>
        <td>{{this.descricao}}</td>
        <td>R$ {{this.precoBase}}</td>
        <td>
                <a href="/jogos/{{this.id}}/conquistas">Ver Conquistas</a>
            </td>
    </tr>
    {{/each}}
</table>

