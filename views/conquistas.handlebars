<h1>Conquistas do Jogo {{jogo.titulo}}</h1>

<h1>Olá jogador(a), seja bem vindo a tela de suas conquistas!</h1>

<a class="button" href="/conquistas/{{jogo.id}}/novaConquista">Cadastrar Nova Conquista</a>

<table border="1">
  <!-- table row -->
  <tr>
    <!-- table head -->
    <th>Título</th>
    <th>Descrição</th>
  </tr>
  {{#each conquistas}}
    <tr>
      <td>{{this.titulo}}</td>
      <td>{{this.descricao}}</td>
    </tr>
  {{/each}}
</table>

